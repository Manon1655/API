{% extends 'base.html.twig' %}

{% block title %}liste des livres{% endblock %}
{% block body %}
    <div class="container">
        <h1>
            Tableau des livres
        </h1>
        <div class="row">
            {% for livre in livres %}
                <div class="col-md-3">
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">
                            {{ livre.titre }}
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">
                                {{ livre.auteur }}
                            </h4>
                            <p class="card-text">
                                {{ livre.genre }}
                            </p>
                            <p class="card-text">
                                {{ livre.editeur }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}