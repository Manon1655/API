<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        {% block stylesheets %}
           
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">API</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('api_adherents') }}">Adherents</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('api_prets') }}">Prets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('api_auteurs') }}">Auteurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('api_editeurs') }}">Editeurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('api_genres') }}">Genres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('api_livres') }}">Livres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('api_nationalites') }}">Nationalites</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container mt-5">
            {% block body %}
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Adherents</h5>
                                <p class="card-text">Liste des Adhérents.</p>
                                <a href="{{ path('api_adherents') }}" class="btn btn-primary">Voir</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Prets</h5>
                                <p class="card-text">Liste des Prêts.</p>
                                <a href="{{ path('api_prets') }}" class="btn btn-primary">Voir</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Auteurs</h5>
                                <p class="card-text">Liste des Auteurs.</p>
                                <a href="{{ path('api_auteurs') }}" class="btn btn-primary">Voir</a>
                            </div>
                        </div>
                    </div>
                     <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Editeurs</h5>
                                <p class="card-text">Liste des Editeurs.</p>
                                <a href="{{ path('api_editeurs') }}" class="btn btn-primary">Voir</a>
                            </div>
                        </div>
                    </div>
                     <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Genres</h5>
                                <p class="card-text">Liste des Genres.</p>
                                <a href="{{ path('api_genres') }}" class="btn btn-primary">Voir</a>
                            </div>
                        </div>
                    </div>
                     <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Livres</h5>
                                <p class="card-text">Liste des Livres.</p>
                                <a href="{{ path('api_livres') }}" class="btn btn-primary">Voir</a>
                            </div>
                        </div>
                    </div>
                     <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Nationalites</h5>
                                <p class="card-text">Liste des Nationalités.</p>
                                <a href="{{ path('api_nationalites') }}" class="btn btn-primary">Voir</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        {% block javascripts %}
          
        {% endblock %}
    </body>
</html>